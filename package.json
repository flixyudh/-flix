{
  "name": "@flix",
  "private": true,
  "description": "List of React Native Component created by Flix",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "release": "yarn workspaces foreach -A -p run release",
    "build": "yarn workspaces foreach run build"
  },
  "author": "Flix <flixy121@gmail.com> (https://github.com/flixyudh)",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off",
      "react-native/no-inline-styles": "off",
      "unused-imports/no-unused-imports": "error",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "example",
    "docs/",
    "dist/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@react-native/babel-preset": "^0.73.20",
    "@react-native/eslint-config": "^0.73.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "release-it": "^15.0.0",
    "typescript": "^5.3.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "packageManager": "yarn@3.6.1"
}
